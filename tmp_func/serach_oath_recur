#include "lem_in.h"

void	delete_paths(t_paths **path)
{
	t_set_path *tmp_set;
	t_paths *tmp_paths;

	tmp_set = (*path)->s_set;
	while ((*path))
	{
		tmp_paths = *path;
		while ((*path)->s_set)
		{
			tmp_set = (*path)->s_set;
			(*path)->s_set = (*path)->s_set->next;
			free(tmp_set);
			tmp_set = NULL;
		}
		(*path) = (*path)->next;
		free(tmp_paths);
		tmp_paths = NULL;
	}

}

void	add_num(int num, t_set_path **set, t_set_path **s_set)
{
	if (*set == NULL)
	{
		*set = (t_set_path *)malloc(sizeof(t_set_path));
		(*set)->var = num;
		(*set)->next = NULL;
		(*set)->back = NULL;
		*s_set = *set;
	}
	else
	{
		(*set)->next = (t_set_path *)malloc(sizeof(t_set_path));
		(*set)->next->back = *set;
		*set = (*set)->next;
		(*set)->var = num;
		(*set)->next = NULL;
	}
}

t_paths *add_path(t_paths *parent, int len)
{
	int i;

	i = 0;
	t_paths *path;
	t_set_path *tmp;

	tmp = parent->s_set;
	path = (t_paths *)malloc(sizeof(t_paths));
	path->s_set = NULL;
	path->set = NULL;
	while (i < len)
	{
		add_num(tmp->var, &path->set, &path->s_set);
		i++;
		tmp = tmp->next;
	}
	path->len = len;
	path->go = CLOSE;
	path->next = NULL;
	return (path);
}

void	create_paths(t_ferm **ferm, t_info *info, int branch, t_paths *paths)
{
	int path;
	int len;
	int room;
	t_paths *tmp;

	tmp = paths;
	path = 0;
	room = 0;
	//add_num(branch, &(paths->set), &(paths->s_set));
	paths->len++;
	if (ferm[branch][branch].type == END)
	{
		ft_putnbr(info->c_path);
		ft_putchar('\n');
		info->c_path++;
		paths->go = OPEN;
		return ;
	}
	len = paths->len;
	// ft_putstr(ferm[branch][branch].name);
	// ft_putchar(':');
	// ft_putchar('\t');
	// ft_putnbr(branch);
	// ft_putchar('\n');
	ferm[branch][branch].path_lenght = -1;
	while (room < info->c_rooms)
	{
		if(ferm[branch][room].pass == OPEN)
		{
			if (ferm[room][room].path_lenght == 1)
			{
				// if (path > 0)
				// {
				// 	while (tmp->next != NULL)
				// 		tmp = tmp->next;
				// 	tmp->next = add_path(paths, len);
				// 	tmp = tmp->next;
				// }
				create_paths(ferm, info, room, tmp);
				// path++;
			}
		}
		room++;
	}
	ferm[branch][branch].path_lenght = 1;
}

t_paths	*search_paths(t_ferm **ferm, t_info *info)
{
	int branch;
	int rooms;
	t_paths *paths;

	branch = 0;
	rooms = 0;
	paths = (t_paths *)malloc(sizeof(t_paths));
	paths->next = NULL;
	paths->s_set = NULL;
	paths->set = NULL;
	paths->len = 0;
	paths->go = CLOSE;
	while (ferm[branch][branch].type != START)
		branch++;
	ferm[branch][branch].path_lenght = -1;
	while (rooms < info->c_rooms)
	{
		if(ferm[branch][rooms].pass == OPEN)
			ferm[rooms][branch].pass = CLOSE;
		rooms++;
	}
	create_paths(ferm, info, branch, paths);
	return (paths);
}